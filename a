sudo apt install libefl-all-dev

#include <Elementary.h>
#include <Ecore.h>
#include <Ecore_Evas.h>
#include <time.h>

static Evas_Object *clock_label;

static void update_clock(void *data, Ecore_Timer *timer) {
    time_t t = time(NULL);
    struct tm *tm_info = localtime(&t);
    char buffer[64];
    strftime(buffer, sizeof(buffer), "%H:%M:%S", tm_info);
    elm_object_text_set(clock_label, buffer);
}

EAPI_MAIN int elm_main(int argc, char **argv) {
    elm_policy_set(ELM_POLICY_QUIT, ELM_POLICY_QUIT_LAST);

    Evas_Object *win = elm_win_util_standard_add("Desktop", "Desktop");
    elm_win_fullscreen_set(win, EINA_TRUE);
    evas_object_show(win);

    // Arka plan
    Evas_Object *bg = evas_object_rectangle_add(evas_object_evas_get(win));
    evas_object_color_set(bg, 0, 0, 0, 255); // siyah
    evas_object_resize(bg, 1920, 1080);
    evas_object_show(bg);

    // Üst panel
    Evas_Object *panel = elm_box_add(win);
    evas_object_size_hint_weight_set(panel, EVAS_HINT_EXPAND, 0.0);
    evas_object_size_hint_align_set(panel, EVAS_HINT_FILL, 0.0);
    evas_object_move(panel, 0, 0);
    evas_object_resize(panel, 1920, 40);
    evas_object_show(panel);

    // İçerik (sol + saat + sağ)
    Evas_Object *hbox = elm_box_add(panel);
    elm_box_horizontal_set(hbox, EINA_TRUE);
    evas_object_size_hint_weight_set(hbox, EVAS_HINT_EXPAND, 0.0);
    evas_object_size_hint_align_set(hbox, EVAS_HINT_FILL, 0.0);
    evas_object_show(hbox);

    // Sol kutu
    Evas_Object *left = elm_label_add(hbox);
    elm_object_text_set(left, "SysInfo");
    evas_object_show(left);
    elm_box_pack_end(hbox, left);

    // Saat
    clock_label = elm_label_add(hbox);
    elm_object_text_set(clock_label, "00:00:00");
    evas_object_show(clock_label);
    elm_box_pack_end(hbox, clock_label);

    // Sağ kutu
    Evas_Object *right = elm_label_add(hbox);
    elm_object_text_set(right, "[X]");
    evas_object_show(right);
    elm_box_pack_end(hbox, right);

    elm_box_pack_end(panel, hbox);
    evas_object_show(panel);

    // Event loop için saat güncelleyici
    ecore_timer_add(1.0, (Ecore_Task_Cb)update_clock, NULL);

    elm_run();
    elm_shutdown();
    return 0;
}
ELM_MAIN()
